<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E7B7A0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0B275"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Home Page"
            android:textSize="28sp"
            android:textStyle="bold" />


        <!-- First Row: Profile and Vehicles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E7B7A0"
                android:onClick="goToProfile"
                android:text="Profile" />

            <Button
                android:id="@+id/btn_vehicles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E7B7A0"
                android:onClick="goToVehicles"
                android:text="Vehicles" />

        </LinearLayout>

        <!-- Second Row: Claims and Share -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_claims"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E7B7A0"
                android:onClick="goToClaims"
                android:text="Claims" />

            <Button
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E7B7A0"
                android:onClick="shareApp"
                android:text="Share" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_logout"
            android:layout_width="358dp"
            android:layout_height="67dp"
            android:backgroundTint="#EB9A73"
            android:onClick="logout"
            android:text="Logout" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>